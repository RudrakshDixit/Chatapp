<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel"
        android:background="@drawable/register_login_page_background"
>

<TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
android:text="Welcome User!!"
          android:textSize="36dp"
          android:textColor="#fff"
          android:id="@+id/welcomeusertext"
          android:layout_marginTop="80dp"
          android:layout_marginLeft="20dp"
/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Login here"
              android:textSize="70dp"
              android:layout_below="@+id/welcomeusertext"
              android:textColor="#fff"
              android:layout_marginLeft="20dp"
    />
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/rel2"


    >

        <EditText
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:id="@+id/Login_email"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email "
                    android:maxLength="30"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000"
                    android:textColorHint="#a2a2a2"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/edittexts_bg"
                    android:maxLines="1"
            />



            <EditText
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:id="@+id/Login_password"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password "
                    android:maxLength="20"
                    android:maxLines="1"
                    android:layout_below="@id/Login_email"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textColor="#000"
                    android:textColorHint="#a2a2a2"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:background="@drawable/edittexts_bg"
            />

        <Button android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/Login_button"
                android:text="Login"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/Login_password"
                android:background="@drawable/button_gradient"
        />

    </RelativeLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="New member? Register here"
              android:textSize="16dp"
              android:id="@+id/GotoRegistration"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              android:textColor="#fff"
              android:layout_marginBottom="32dp"
    />

</RelativeLayout>